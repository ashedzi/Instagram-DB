@model IEnumerable<Instagram_DB.Models.DirectMessage>
@{
    ViewData["Title"] = "Direct Messages";
    int userId = ViewBag.UserId;
}

<h2>Direct Messages</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Sender</th>
            <th>Receiver</th>
            <th>Message</th>
            <th>Timestamp</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var message in Model)
        {
            <tr>
                <td>@message.SenderUser.Username</td>
                <td>@message.ReceiverUser.Username</td>
                <td>@message.TextContent</td>
                <td>@message.Timestamp.ToString("g")</td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="SendMessage" asp-route-userId="@userId" class="btn btn-primary">Send New Message</a>