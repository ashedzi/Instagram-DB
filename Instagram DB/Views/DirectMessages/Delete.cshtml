@model Instagram_DB.Models.DirectMessage
@{
    ViewData["Title"] = "Delete Direct Message";
    int userId = ViewBag.UserId;
}

<h2>Delete Direct Message</h2>

<h4>Are you sure you want to delete this message?</h4>
<div>
    <h5>Message Details</h5>
    <dl class="row">
        <dt class="col-sm-2">Sender</dt>
        <dd class="col-sm-10">@Model.SenderUser.Username</dd>
        <dt class="col-sm-2">Receiver</dt>
        <dd class="col-sm-10">@Model.ReceiverUser.Username</dd>
        <dt class="col-sm-2">Message</dt>
        <dd class="col-sm-10">@Model.TextContent</dd>
        <dt class="col-sm-2">Timestamp</dt>
        <dd class="col-sm-10">@Model.Timestamp.ToString("g")</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="MessageId" />
        <input type="hidden" name="userId" value="@userId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" asp-route-userId="@userId" class="btn btn-secondary">Cancel</a>
    </form>
</div>

@section Styles {
    <style>
        .row {
            margin-bottom: 1rem;
        }

        .btn {
            margin-right: 0.5rem;
        }
    </style>
}