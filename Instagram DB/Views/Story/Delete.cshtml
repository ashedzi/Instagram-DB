@model Instagram_DB.Models.Story

<h2>Delete Story</h2>

<h3>Are you sure you want to delete this story?</h3>
<div>
    <strong>Story ID:</strong> @Model.StoryId <br />
    <strong>Caption:</strong> @Model.Caption <br />
    <strong>Posted By:</strong> @Model.PosterNavigation?.Username <br />
    <strong>Timestamp:</strong> @Model.Timestamp
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="StoryId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
